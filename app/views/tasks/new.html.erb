<script charset="utf-8">
$(function () {
$('[data-toggle="popover"]').popover()
})
</script>

<div class="col-md-6 col-md-offset-3">
  <h2 class = "page-header">Add a Task</h2>
<%= form_for @task do |f| %>
  <%= f.label :description, class:"control-label" %>
  <%= f.text_field :description, class:"form-control" %>

  <%= f.label :task_type, class:"control-label"%>
    <%= f.collection_select(:task_type, Task::TASK_TYPE, :to_s, :capitalize,{}, {class: 'form-control'}) %>
</div>

  <br>

  <%= f.submit class: "control-label" %>
<% end %>
</div>
